{
  "name": "ama-highlight-poc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-dirs": "mkdirp data && mkdirp dist",
    "postinstall": "npm run create-dirs",
    "data-download": "wget http://www.bev.gv.at/pls/portal/docs/PAGE/BEV_PORTAL_CONTENT_ALLGEMEIN/0200_PRODUKTE/UNENTGELTLICHE_PRODUKTE_DES_BEV/VGD_Oesterreich_gst.zip -d data/",
    "data-geojson": "shp2json data/VGD_Oesterreich_gst.zip > data/VGD_Oesterreich_gst.geojson",
    "data-join": "node scripts/prepare-data",
    "data": "npm run data-download && npm run data-geojson && npm run data-join",
    "tiles-lowzoom": "tippecanoe --force --maximum-zoom=8 --grid-low-zooms --coalesce-smallest-as-needed --low-detail=7 --full-detail=7 --simplification=10 --detect-shared-borders --no-tile-compression --maximum-tile-bytes=800000 --convert-stringified-ids-to-numbers --use-attribute-for-id=KG_NR data/snar.json --output-to-directory dist/tiles",
    "tiles-remove-unused": "rimraf dist/tiles/8",
    "tiles-hizoom": "tippecanoe --allow-existing --minimum-zoom=8 --no-tiny-polygon-reduction --simplification=10 --detect-shared-borders --no-tile-compression --maximum-tile-bytes=800000 --convert-stringified-ids-to-numbers --use-attribute-for-id=KG_NR data/snar.json --output-to-directory dist/tiles",
    "tiles": "npm run tiles-lowzoom && npm run tiles-remove-unused && npm run tiles-hizoom",
    "start": "webpack-dev-server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mapbox/mapbox-gl-style-spec": "^13.7.2",
    "ol": "^6.0.0-beta.12",
    "ol-mapbox-style": "^5.0.0-beta.3"
  },
  "devDependencies": {
    "css-loader": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-wget": "^0.4.3",
    "rimraf": "^2.6.3",
    "shp2json": "^1.2.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
