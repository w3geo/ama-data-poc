{
  "name": "ama-highlight-poc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-dirs": "mkdirp data && mkdirp dist",
    "postinstall": "npm run create-dirs",
    "external-data-download": "wget http://www.bev.gv.at/pls/portal/docs/PAGE/BEV_PORTAL_CONTENT_ALLGEMEIN/0200_PRODUKTE/UNENTGELTLICHE_PRODUKTE_DES_BEV/VGD_Oesterreich_gst.zip -d data/",
    "external-data-geojson": "shp2json data/VGD_Oesterreich_gst.zip > data/VGD_Oesterreich_gst.geojson",
    "external-data": "npm run external-data-download && npm run external-data-geojson",
    "prepare-data-pct": "node --max-old-space-size=8192 scripts/prepare-data --topic=pct",
    "prepare-data-t1v": "node --max-old-space-size=8192 scripts/prepare-data --topic=t1v",
    "prepare-data": "npm run prepare-data-pct && npm run prepare-data-t1v",
    "data": "npm run external-data && npm run prepare-data",
    "tiles-lowzoom": "tippecanoe --force --maximum-zoom=8 --grid-low-zooms --coalesce-smallest-as-needed --low-detail=7 --full-detail=7 --simplification=10 --detect-shared-borders --no-tile-compression --maximum-tile-bytes=865000 --convert-stringified-ids-to-numbers --use-attribute-for-id=KG_NR",
    "tiles-remove-unused": "rimraf dist/tiles-pct/8 && rimraf dist/tiles-t1v/8",
    "tiles-hizoom": "tippecanoe --allow-existing --minimum-zoom=8 --no-tiny-polygon-reduction --simplification=10 --detect-shared-borders --no-tile-compression --maximum-tile-bytes=865000 --convert-stringified-ids-to-numbers --use-attribute-for-id=KG_NR",
    "tiles": "npm run tiles-lowzoom -- data/tiles-pct.json --output-to-directory dist/tiles-pct && npm run tiles-lowzoom -- data/tiles-t1v.json --output-to-directory dist/tiles-t1v && npm run tiles-remove-unused && npm run tiles-hizoom -- data/tiles-pct.json --output-to-directory dist/tiles-pct && npm run tiles-hizoom -- data/tiles-t1v.json --output-to-directory dist/tiles-t1v",
    "start": "webpack-dev-server",
    "build": "webpack",
    "publish": "node scripts/gh-pages.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mapbox/mapbox-gl-style-spec": "^13.7.2",
    "ol": "^6.1.1-dev.1573743852980",
    "ol-mapbox-style": "^5.0.2"
  },
  "devDependencies": {
    "css-loader": "^3.1.0",
    "gh-pages": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "node-wget": "^0.4.3",
    "rimraf": "^2.6.3",
    "shp2json": "^1.2.1",
    "simple-arg-parser": "^1.2.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
